<phpunit>
    <testsuites>
        <testsuite name="herloct/slim-newrelic">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>